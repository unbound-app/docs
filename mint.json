{
	"$schema": "https://mintlify.com/schema.json",
	"name": "Unbound",
	"logo": {
		"dark": "/logo/dark.svg",
		"light": "/logo/light.svg"
	},
	"favicon": "/logo/dark.svg",
	"colors": {
		"primary": "#c74050",
		"light": "#c74050",
		"dark": "#c74050",
		"background": {
			"dark": "#0c0c0c",
			"light": "#fcfcfc"
		},
		"anchors": {
			"from": "#c74050",
			"to": "#9e333f"
		}
	},
	"modeToggle": {
		"default": "dark",
		"isHidden": true
	},
	"background": {
		"style": "grid"
	},
	"anchors": [
		{
			"name": "Discord Community",
			"icon": "discord",
			"url": "https://discord.gg/unbound"
		},
		{
			"name": "GitHub",
			"icon": "github",
			"url": "https://github.com/unbound-app"
		}
	],
	"feedback": {
		"suggestEdit": true,
		"raiseIssue": true
	},
	"search": {
		"prompt": "Search documentation..."
	},
	"layout": "topnav",
	"sidebar": {
		"items": "container"
	},
	"api": {
		"auth": {
			"method": "bearer"
		}
	},
	"navigation": [
		{
			"group": "",
			"pages": [
				"overview",
				"roadmap"
			]
		},
		{
			"group": "Loader",
			"icon": "arrow-right-to-bracket",
			"pages": [
				"loader/introduction",
				"loader/configuration",
				"loader/local-build",
				"loader/ios"
			]
		},
		{
			"group": "Plugins",
			"icon": "paintbrush",
			"pages": [
				"plugins/introduction",
				"plugins/debugger",
				"plugins/flux",
				"plugins/react-patching",
				"plugins/manifest"
			]
		},
		{
			"group": "Themes",
			"icon": "paintbrush",
			"pages": [
				"themes/introduction",
				"themes/backgrounds",
				"themes/types",
				"themes/manifest"
			]
		},
		{
			"group": "Icon Packs",
			"icon": "package",
			"pages": [
				"icon-packs/introduction",
				"icon-packs/manifest"
			]
		},
		{
			"group": "Developer API",
			"icon": "folder-tree",
			"pages": [
				"modules/i18n",
				"modules/metro",
				"modules/patcher",
				"modules/storage",
				"modules/assets",
				"modules/toasts",
				"modules/dialogs",
				"modules/commands",
				"modules/native",
				"modules/utilities",
				"modules/components"
			]
		}
	],
	"footerSocials": {
		"x": "https://twitter.com/UnboundClient",
		"github": "https://github.com/unbound-app",
		"discord": "https://discord.gg/unbound"
	}
}
